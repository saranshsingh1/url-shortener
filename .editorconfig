# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

# 4 space indentation
# Try to keep docstrings and comments use max_line_length = 80
[*.py]
max_line_length = 90
